ScreenManager:
    LoginScreen:
        name: "login_screen"
    SignupScreen:
        name: "signup_screen"
    HomeScreen:
        name: "home_screen"

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            id: welcome_label
            text: "Welcome!"
            halign: "center"
            theme_text_color: "Primary"

        MDRaisedButton:
            text: "Logout"
            md_bg_color: 1, 0, 0, 1
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5}
            on_release: app.go_back()



<LoginScreen>:
    md_bg_color: 0.95, 0.95, 0.95, 1  

    MDCard:
        size_hint: 0.7, 0.75
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 8
        radius: [20, 20, 20, 20]
        md_bg_color: 1, 1, 1, 1  # White Background

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(15)
            padding: dp(30)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                text: "Login"
                halign: "center"
                bold: True
                theme_text_color: "Primary"

            MDLabel:
                text: "Username"
                theme_text_color: "Secondary"
                bold: True
                font_size: dp(14)

            MDTextField:
                id: username
                hint_text: "Enter your username"
                max_text_length: 15
                mode: "rectangle"
                size_hint_x: 1
                icon_left: "account"
                text_color: 0, 0, 0, 1
                line_color_focus: 0.1, 0.6, 1, 1
                background_color: 1, 1, 1, 1

            MDLabel:
                text: "Password"
                theme_text_color: "Secondary"
                bold: True
                font_size: dp(14)

            MDTextField:
                id: password
                hint_text: "Enter your password"
                max_text_length: 15
                mode: "rectangle"
                size_hint_x: 1
                icon_left: "lock"
                password: True
                text_color: 0, 0, 0, 1
                line_color_focus: 0.1, 0.6, 1, 1
                background_color: 1, 1, 1, 1

            MDRaisedButton:
                text: "Login"
                md_bg_color: 0.1, 0.6, 1, 1
                text_color: 1, 1, 1, 1
                size_hint_x: 1
                elevation: 4
                on_release: root.login()

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(40)
                spacing: dp(5)
                halign: "center"

                MDLabel:
                    text: "Signup first if you haven't already."
                    theme_text_color: "Hint"
                    font_size: dp(12)

                MDFlatButton:
                    text: "Signup"
                    text_color: 0.1, 0.6, 1, 1  
                    on_release: root.go_to_signup()


<SignupScreen>:
    md_bg_color: 0.95, 0.95, 0.95, 1  

    MDCard:
        size_hint: 0.7, 0.75
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 8
        radius: [20, 20, 20, 20]
        md_bg_color: 1, 1, 1, 1  

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(15)
            padding: dp(30)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(40)
                padding: [dp(0), dp(0), dp(0), dp(10)]

                MDIconButton:
                    icon: "arrow-left"
                    on_release: app.go_back()  

            MDLabel:
                text: "Signup"
                halign: "center"
                bold: True
                theme_text_color: "Primary"

            MDLabel:
                text: "Username"
                theme_text_color: "Secondary"
                bold: True
                font_size: dp(14)

            MDTextField:
                id: username
                hint_text: "Enter your username"
                max_text_length: 15
                mode: "rectangle"
                size_hint_x: 1
                icon_left: "account"
                text_color: 0, 0, 0, 1
                line_color_focus: 0.1, 0.6, 1, 1
                background_color: 1, 1, 1, 1

            MDLabel:
                text: "Email"
                theme_text_color: "Secondary"
                bold: True
                font_size: dp(14)

            MDTextField:
                id: email
                hint_text: "Enter your email"
                max_text_length: 30
                mode: "rectangle"
                size_hint_x: 1
                icon_left: "email"
                text_color: 0, 0, 0, 1
                line_color_focus: 0.1, 0.6, 1, 1
                background_color: 1, 1, 1, 1

            MDLabel:
                text: "Password"
                theme_text_color: "Secondary"
                bold: True
                font_size: dp(14)

            MDTextField:
                id: password
                hint_text: "Enter your password"
                max_text_length: 15
                mode: "rectangle"
                size_hint_x: 1
                icon_left: "lock"
                password: True
                text_color: 0, 0, 0, 1
                line_color_focus: 0.1, 0.6, 1, 1
                background_color: 1, 1, 1, 1

            MDRaisedButton:
                text: "Signup"
                md_bg_color: 0.1, 0.6, 1, 1
                text_color: 1, 1, 1, 1
                size_hint_x: 1
                elevation: 4
                on_release: root.signup()
