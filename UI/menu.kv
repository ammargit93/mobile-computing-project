<MenuScreen>:
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "‚öôÔ∏è GenQuery Menu"
            elevation: 4
            md_bg_color: 0.15, 0.15, 0.3, 1
            specific_text_color: 1, 1, 1, 1
            left_action_items: [["arrow-left", lambda x: app.close_menu()]]

        MDNavigationDrawer:
            id: nav_drawer
            radius: [0, 20, 20, 0]  # Rounded edges for a sleek look
            md_bg_color: 0.05, 0.05, 0.2, 1  # Dark futuristic theme

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                padding: dp(20)

                MDLabel:
                    text: "üöÄ Quick Access"
                    theme_text_color: "Custom"
                    text_color: 0, 1, 1, 1  # Neon cyan
                    font_style: "H6"
                    size_hint_y: None
                    height: dp(40)

                MDList:
                    OneLineAvatarIconListItem:
                        text: "üìú Biometric"
                        IconLeftWidget:
                            icon: "fingerprint"
                        Widget:
                            size_hint_x: None
                            width: dp(40)  # Give space for the checkbox
                            MDCheckbox:
                                id: biometric_checkbox
                                on_active: root.toggle_biometric(self.active)


                    OneLineIconListItem:
                        text: "‚öôÔ∏è History"
                        on_release: app.show_history()
                        IconLeftWidget:
                            icon: "history"

                    OneLineIconListItem:
                        text: "‚ÑπÔ∏è Help"
                        on_release: app.show_help()
                        IconLeftWidget:
                            icon: "information-outline"
