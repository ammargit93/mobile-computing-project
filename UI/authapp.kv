ScreenManager:
    LoginScreen:
        name: "login_screen"
    SignupScreen:
        name: "signup_screen"
    HomeScreen:
        name: "home_screen"
    PreAuthScreen:
        name: "pre_auth_screen"

<PreAuthScreen>:
    MDFloatLayout:
        MDLabel:
            text: "GigHive"
            halign: "center"
            font_style: "H4"
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

        MDRaisedButton:
            text: "Get Started"
            size_hint: None, None
            size: dp(200), dp(50)
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            md_bg_color: 0.6, 0.2, 0.8, 1  # Purple color (R, G, B, A)
            text_color: 1, 1, 1, 1  # White text color
            on_release: root.get_started()
            border_radius:  [25, 25, 25, 25] 
        Image:
            source: "images/preauth.png"  
            size_hint: None, None
            size: dp(800), dp(600)  
            pos_hint: {"center_x": 0.5, "center_y": 0.6}

<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            id: welcome_label
            text: "Welcome!"
            halign: "center"
            theme_text_color: "Primary"

        MDRaisedButton:
            text: "Logout"
            md_bg_color: 1, 0, 0, 1
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5}
            on_release: app.go_back()



<LoginScreen>:
    md_bg_color: 0.95, 0.95, 0.95, 1  # Light background color

    MDCard:
        size_hint: 0.8, 0.65  # Reduced height
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 4
        radius: [20, 20, 20, 20]
        md_bg_color: 1, 1, 1, 1  # White card background

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(15)
            padding: dp(30)

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(40)

                # MDIconButton:
                #     icon: "arrow-left"
                #     theme_text_color: "Custom"
                #     text_color: 1, 0.4, 0.2, 1  # Orange color
                #     on_release: app.root.current = "pre_auth_screen"

                MDLabel:
                    text: "Login"
                    font_name: "fonts/Athelas-Regular/Athelas-Regular.ttf"
                    font_size: "32sp"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 0.4, 0.2, 1  # Orange text

            MDTextField:
                id: username
                hint_text: "Enter your username"
                icon_left: "account"
                mode: "rectangle"

            MDTextField:
                id: password
                hint_text: "Enter your password"
                icon_left: "lock"
                password: True
                mode: "rectangle"
                right_icon: "eye"

            MDRaisedButton:
                text: "Login"
                md_bg_color: 1, 0.6, 0.2, 1  # Gradient-like orange
                text_color: 1, 1, 1, 1  # White text
                size_hint: 1, None
                height: dp(50)
                elevation: 3
                on_release: root.login()

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(40)
                spacing: dp(5)
                halign: "center"

                MDLabel:
                    text: "Don't have an account?"
                    theme_text_color: "Hint"
                    font_size: dp(12)

                MDFlatButton:
                    text: "Sign Up"
                    text_color: 1, 0.4, 0.2, 1  # Orange color
                    on_release: root.go_to_signup()


<SignupScreen>:
    md_bg_color: 0.95, 0.95, 0.95, 1  # Light background color

    MDCard:
        size_hint: 0.8, 0.85
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 4
        radius: [20, 20, 20, 20]
        md_bg_color: 1, 1, 1, 1  # White card background

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(15)
            padding: dp(30)

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(40)

                MDIconButton:
                    icon: "arrow-left"
                    theme_text_color: "Custom"
                    text_color: 1, 0.4, 0.2, 1 
                    on_release: app.root.current = "login_screen"

            MDLabel:
                text: "Sign up"
                font_name: "fonts/Athelas-Regular/Athelas-Regular.ttf"
                font_size: "32sp"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 0.4, 0.2, 1  # Orange text

            MDTextField:
                id: username
                hint_text: "Enter your full name"
                icon_left: "account"
                mode: "rectangle"

            MDTextField:
                id: email
                hint_text: "Enter your email address"
                icon_left: "email"
                mode: "rectangle"

            MDTextField:
                id: password
                hint_text: "Enter your password"
                icon_left: "lock"
                password: True
                mode: "rectangle"
                right_icon: "eye"

            MDTextField:
                id: confirm_password
                hint_text: "Re-enter your password"
                icon_left: "lock"
                password: True
                mode: "rectangle"
                right_icon: "eye-off"

            MDRaisedButton:
                text: "Sign Up"
                md_bg_color: 1, 0.6, 0.2, 1  # Gradient-like orange
                text_color: 1, 1, 1, 1  # White text
                size_hint: 1, None
                height: dp(50)
                elevation: 3
                on_release: root.signup()

            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(40)
                spacing: dp(5)

               
